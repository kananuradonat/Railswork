<%= form_with(model: Blog.new) do |form| %>
  <div class="blog_title">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="blog_title">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  
  
  <div class="blog_title">
    <%= form.label :content %>
     <%= form.text_area :content, :cols => 30, :rows => 10 %>
  </div>
  
  <%= form.submit %>
<% end %>